# Search Settings
MAX_SEARCH_RESULTS=10
SEARCH_TIMEOUT=60

# Gemini LLM Settings
DEFAULT_MODEL=gemini-2.5-flash
MAX_TOKENS=2000
TEMPERATURE=0.7
